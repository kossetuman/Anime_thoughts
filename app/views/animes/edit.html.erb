<div class="container">
  <div class="row mt-5">
    <div class="col-md-6 mx-auto bg-white border border-success rounded py-4">
        <h2 class="text-center border-bottom border-success">投稿アニメ更新</h2>
        <%= form_with model: @anime, local: true do |f| %>
          <div class="form-group">
            <label for="anime-title">タイトル</label>
            <%= f.text_field :title, autofocus: true, class: "form-control" %>
          </div>
  
          <div class="form-group">
            <label for="anime-thought">感想</label>
            <%= f.text_area :thought, class: "form-control form-control-lg" %>
          </div>
          
           <div class="form-group" id="star">
             <%= f.label :rate, "評価 :" %>
             <%= f.hidden_field :rate, id: :review_star %>
           </div>

           <script>
            $('#star').raty({
             size : 36,
             starOff: '<%= asset_path('star-off.png') %>',
             starOn : '<%= asset_path('star-on.png') %>',
             starHalf: '<%= asset_path('star-half.png') %>',
             scoreName: 'anime[rate]',
             half: true,
           });
           </script>
  
          <div class="form-group">
            <%= f.attachment_field :anime_image %>
          </div>
          <%= f. submit "更新", class: "btn btn-sm btn-success" %>
        <% end %>
    </div>
  </div>
</div>