<div class="container">
  <div class="row mt-5">
    <div class="col-md-12">
      <div class="page-title">
        <h2>アニメ投稿一覧</h2>
      </div>
      <%= search_form_for @search do |f| %>
      <%= f.label :title, "Keyword" %>
      <%= f.search_field :title_cont, placeholder: "タイトルで検索" %>
      <%= f.submit "検索" %>
      <% end %>
        <table class="table table-hover table-inverse">
          <thead class="thead-light">
            <tr>
              <th>title</th>
              <th></th>
              <th></th>
            </tr>
          </thead>
          <tbody>
            <% @animes.each do |anime| %>
            <tr>
              <td><%= link_to anime.title, anime_path(anime.id) %></td>
              <td></td>
              <td><small class="text-secondary"><%= l anime.created_at %></small></td>
            </tr>
            <% end %>
          </tbody>
        </table>
        <div class="d-flex justify-content-center mb-3"><%= paginate @animes %></div>
    </div>
  </div>
</div>