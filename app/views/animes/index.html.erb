<div class="container">
  <div class="row mt-5">
    <div class="col-md-4">
      <%= form_with model: @anime, local: true do |f| %>
  
      <div class="form-group">
        <label for="title">タイトル</label>
          <%= f.text_field :title, autfoucus: true, placeholder: "アニメのタイトルを入力して下さい", class: "form-control" %>
      </div>
      
       <div class="form-group">
        <label for="thought">感想</label>
          <%= f.text_area :thought, autfoucus: true, placeholder: "アニメのタイトルを入力して下さい", class: "form-control" %>
      </div>
      <% end %>
  </div>    
</div>