<div class="container">
  <div class="row mt-5">
    <div class="col-md-12">
      <div class="page-title">
        <h2>アニメ投稿一覧</h2>
      </div>
        <table class="table table-hover table-inverse">
          <thead class="thead-light">
            <tr>
              <th>anime_image</th>
              <th>title</th>
              <th></th>
              <th></th>
            </tr>
          </thead>
          <tbody>
            <% @animes_index.each do |anime| %>
            <tr>
              <td><%= attachment_image_tag anime, :anime_image,:fill, 50, 50, format: 'jpeg', fallback: "no_image_user.jpg", style: "border-radius:50%" %> </td>
              <td><%= link_to anime.title, anime_path(anime.id) %></td>
              <td></td>
              <td></td>
            </tr>
            <% end %>
          </tbody>
        </table>
        <div class="d-flex justify-content-center mb-3"><%= paginate @animes_index %></div>
    </div>
  </div>
</div>