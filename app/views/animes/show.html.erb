<div class="container">
  <div class="row mt-5">
    <div class="col-md-6 offset-3">
      <h2 class="text-center">アニメ詳細</h2>
      <div class="text-center"><%= attachment_image_tag @anime, :anime_image, size: "200x200", format: 'jpeg', fallback: "no_image.jpg", style: "border-radius:10%", class: "mt-3" %></div></br>
      <div class="profile-name text-center"><%= @anime.title %></div>
      <div class="like-contents text-center">
        <% if current_user.already_liked?(@anime) %>
          <%= link_to anime_like_path(@anime.id), method: :delete do %>
            <i class="fas fa-heart"></i>
          <% end %>
        <% else %>
          <%= link_to anime_like_path(@anime.id), method: :create do %>
            <i class="far fa-heart">いいね</i>
          <% end %>  
        <% end %>
        <%= @anime.likes.count %>
      </div>  
      <p class="text-center d-inline-block mt-3"><%= @anime.thought %></p>
    </div>
  </div>
</div>