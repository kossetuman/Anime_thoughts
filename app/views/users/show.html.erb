<div class="container">
  <div class="row">
    <div class="col-md-3 mr-5 mt-5">
      <%= render "shared/myprofile" %>
    </div>
    <div class="col-md-8 mt-5">
      <div class="page-title">
        <h2>投稿アニメ</h2>
      </div>
      <table class="table table-hover table-inverse">
        <thead class="thead-light">
          <tr>
            <% if @user == current_user %>
              <th>title</th>
              <th></th>
              <th id="anime-modal"><%= render "shared/modal_anime_new" %></th>
            <% else %>
              <th>title</th>
              <th></th>
              <th></th>
            <% end %>
          </tr>
        </thead>
        <tbody>
          <% @anime_show.each do |anime| %>
            <tr>
              <% if anime.user == current_user %>
                <td><%=link_to anime.title, anime_path(anime.id) %></td>
                <td><%= link_to "編集", edit_anime_path(anime.id), class: "btn btn-sm btn-success" %></td>
                <td><%= link_to "削除", anime_path(anime), method: :delete, data: {confirm: "本当に削除しますか？"}, class: "btn btn-sm btn-danger" %></td>
              <% else %>
                <td><%=link_to anime.title, anime_path(anime.id) %></td>
                <td></td>
                <td></td>
              <% end %>
            </tr>
          <% end %>
        </tbody>
      </table>
      <div class="d-flex justify-content-center">
        <%= paginate @anime_show %>
      </div>
    </div>
  </div>
</div>