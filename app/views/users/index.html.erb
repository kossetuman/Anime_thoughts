<div class="container">
  <div class="row mt-5">
    <div class="col-md-12">
      <div class="page-title">
        <h2>ユーザー一覧</h2>
      </div>
      <%= search_form_for @search do |f| %>
      <%= f.label :name, "Keyword" %>
      <%= f.search_field :name_cont, placeholder: "ニックネームで検索" %>
      <%= f.submit "検索" %>
      <% end %>
        <table class="table table-hover table-inverse">
          <thead class="thead-light">
            <tr>
              <th>ユーザー</th>
              <th>ニックネーム</th>
              <th></th>
              <th></th>
              <th></th>
            </tr>
          </thead>
        <tbody>
        <% @users.each do |user| %>
          <tr>
            <td><%= attachment_image_tag user, :image, :fill, 50, 50, format: 'jpeg', fallback: "no_image_user.jpg", style: "border-radius:50%" %></td>
            <td><%= user.name %></td>
            <td></td>
            <td><%= link_to "見たアニメ", user_path(user.id), class: "btn btn-sm btn-primary" %></td>
            <td><%= link_to "プロフィール", profile_user_path(user.id), class: "btn btn-sm btn-secondary" %></td>
          </tr>
        <% end %>
        </tbody>
      </table>
      <div class="d-flex justify-content-center">
        <%= paginate @users %>
      </div>
    </div>
  </div>
</div>