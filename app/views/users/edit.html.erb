<div class="container">
  <div class="row mt-5">
    <div class="col-md-6 mx-auto bg-white border border-secondary rounded py-4">
      <h2 class="text-center border-bottom">ユーザー編集</h2>
      <%= form_with model: @user, local: true do |f| %>
      <% if @user.errors.any? %>
        <div class="alert alert-danger" role="alert">ニックネームは必須項目です。</div>
      <% end %>  
      <div class="form-group">
        <label for="name">Name</label>
          <%= f.text_field :name, autfocus: true, placeholder: "ニックネームを入力して下さい", class: "form-control required" %>
          <span class="invalid-feedback">項目を入力してください.</span>
      </div>

      <div class="form-group">
        <label for="introduction">紹介</label>
          <%= f.text_area :introduction, placeholder: "紹介文を入力して下さい", class: "form-control" %>
      </div>

      <div class="form-group">
        <label for="image">profile画像選択</label>
          <%= f.attachment_field :image %>
      </div>

      <div class="form-group">
        <div><label for="sex">性別</label></div>
        <label><%= f.radio_button :sex, User.sexes.key(0) %>男</label>
        <label><%= f.radio_button :sex, User.sexes.key(1) %>女</label>
      </div>

      <div class="form-group">
        <div><label for="birth_date">生年月日</label></div>
        <%= f.date_select :birth_date, use_month_numbers: true, start_year: 1930,
        end_year: (Time.now.year - 10),
        default: Date.new(2000, 1, 1), class: "form-control" %>
      </div>

      <%= f.submit "更新", class: "btn btn-secondary" %>
      <% end %>
    </div>
  </div>
</div>