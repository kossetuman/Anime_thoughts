<div class="container">
  <%= form_with model: @user, local: true do |f| %>
  <div class="form-group">
    <label for="name">Name</label>
      <%= f.text_field :name, autfocus: true, placeholder: "ニックネームを入力して下さい", class: "form-control" %>
  </div>

  <div class="form-group">
    <label for="introduction">紹介</label>
      <%= f.text_area :introduction, placeholder: "紹介文を入力して下さい", class: "form-control" %>
  </div>
  
  <div class="form-group">
    <label for="image">profile画像選択</label>
      <%= f.attachment_field :image, class: "form-control" %>
  </div>

  <div class="form-group">
    <label><%= f.radio_button :sex, :man %>男</label>
    <label><%= f.radio_button :sex, :woman %>女</label>
  </div>

  <div class="form-group">
    <%= f.date_select :birth_date, use_month_numbers: true, start_year: 1930,
    end_year: (Time.now.year - 10),
    default: Date.new(2000, 1, 1), class: "form-control" %>
  </div>

  <%= f.submit "更新", class: "btn btn-secondary" %>


  <% end %>
</div>