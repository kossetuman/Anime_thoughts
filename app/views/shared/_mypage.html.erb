<h2>User</h2>
<%= attachment_image_tag @user, :image, :fill, 100, 100, format: 'jpeg', fallback: "no_image_user.jpg", style: "border-radius:10%" %>
<table class="table">
  <tbody>
    <tr></tr>
    <tr>
      <th>ﾆｯｸﾈｰﾑ</th>
      <td><%= @user.name %></td>
    </tr>
    <tr>
      <th>生年月日</th>
      <th><%= @user.birth_date %></th>
    </tr>
    <tr>
      <th>性別</th>
      <td><%= @user.sex %></td>
    </tr>
  </tbody>
</table>
<div class="row">
  <%= link_to edit_user_path(@user.id), class: "btn btn-outline-secondary btn-block" do%>
    <i class= "fas fa-user-cog"></i>
  <% end %>
</div>
